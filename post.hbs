{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
        <link rel="stylesheet" type="text/css" href="{{asset "css/entry.css"}}" />
        <div class="content">
            <div class="content-head">
                <h2>{{title}}</h2>
                <p><i class="fa fa-calendar"></i>&nbsp; {{date format="YYYY-MM-DD"}}  &nbsp;<i class="fa fa-commenting-o"></i>&nbsp; <a href="#comments"><span class="ds-thread-count" data-thread-key="{{slug}}" data-count-type="comments"></span></a></p>
            </div>
            <div class="entry">
                {{content}}

                <div class="content-head">
                    <a href="#start"><i class="fa fa-chevron-circle-up" style="font-size:20px;"></i></a>
                </div>

                <div id="comments">
                    <div class="ds-thread" data-thread-key="{{slug}}" data-title="{{title}}" data-url="{{url absolute="true"}}"></div>
                </div>
            </div>
        </div>

{{/post}}