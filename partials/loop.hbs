{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<div class="content-head">
    <h2><a href="{{url}}#start">{{title}}</a></h2>
    <p><i class="fa fa-calendar"></i>&nbsp; {{date format="YYYY-MM-DD"}}  &nbsp;<i class="fa fa-commenting-o"></i>&nbsp; <a href="{{url}}#comments"><span class="ds-thread-count" data-thread-key="{{slug}}" data-count-type="comments"></span></a></p>
</div>
{{/foreach}}

<div class="content-head">
    <h2><a href="#start"><i class="fa fa-chevron-circle-up"></i></a></h2>
</div>
